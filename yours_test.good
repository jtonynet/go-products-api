package yours_test

import (
	"encoding/json"
	"fmt"
	"testing"

	"github.com/google/uuid"
	"github.com/stretchr/testify/assert"
)

func TestSomething(t *testing.T) {

	// assert equality
	assert.Equal(t, 123, 123, "they should be equal")

	// assert inequality
	assert.NotEqual(t, 123, 456, "they should not be equal")

	uniqueID, _ := uuid.Parse("37ad0486-5ba5-47a5-b352-408b077e12c6")
	productRequest := fmt.Sprintf(
		`{
			"id":%s, 
			"name":"Playstation 7", 
			"description": "Videogame de ultima geracao", 
			"price":4000,
		}`,
		uniqueID)

	productRequestJSON, err := json.Marshal(productRequest)
	assert.NoError(t, err)
	fmt.Println(string(productRequestJSON))
}
